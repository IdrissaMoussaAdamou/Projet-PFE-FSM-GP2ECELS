@model Batiment
<form id="Batiment-form">
    <input type="hidden" name="OldCode" value="@Model.Code">
    @*<input type="hidden" asp-for="Code">*@
    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-12">
                <label for="">
                    Code
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="Code">
                <span class="text-danger" asp-validation-for="Code"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-12">
                <label for="">
                    Nom
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="Nom">
                <span class="text-danger" asp-validation-for="Nom"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer btn-full-right">
        <button type="reset" class="btn b-button">Annuler</button>
        <button type="button" class="btn b-button" id="submit">
           
            <span> Enregistrer </span> 
           
        </button>
    </div>
</form>