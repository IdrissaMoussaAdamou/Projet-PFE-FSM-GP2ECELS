@model List<Enseignant>
@{ 
    var ids = ViewBag.ids;
    var ListDepartement = ViewBag.ListDepartement;
    }

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header page-header-resize">Liste Des Enseignant</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 filter-bar">
        <form class="form-horizontal filter-bar-form">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group row" style="margin-bottom: 0px;">
                        <label for="" class="col-md-1 col-lg-offset-2" style="padding-top: 8px;">Filtrer Par:</label>
                        <div class="col-md-2">
                            <select class="form-control" id="FieldNameSurv">
                                <option value="Departement">Departement</option>
                                <option value="Grade">Grade</option>
                                <option value="Statut">Statut</option>
                                <option value="Tous">Tous</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <select class="form-control" id="FieldValueSurv">
                                @foreach (var DeptItem in @ListDepartement)
                                 {
                                       <option value="@DeptItem.IntituleFr">@DeptItem.IntituleFr</option>
                                 }
                            </select>
                        </div>

                        <div class="col-md-2">
                            <button type="button" class="btn b-button btn-sm " id="searchSurv">
                                Chercher | <i class="fa fa-search fa-x"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-right">
        <button class="btn b-button btn-sm btn-bottom" onclick="ImporterSurveillant(@ids)">
            <i class="fa fa-upload fa-x" title="Importer"></i>
            Importer
        </button>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="Surveillant2-datable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr style="background-color: rgb(221, 221, 221);">
                            <th>Select</th>
                            <th>CIN</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Grade</th>
                            <th>Statut</th>
                            <th>Departement</th>
                            <th>SituationAdministrative</th>
                        </tr>
                    </thead>
                    <tbody id="Surveill-table-body">
                        @foreach (var @JItem in @Model)
                        {
                        <tr class="row-color" id="row_@JItem.Id">
                            <td class="checkz">
                                <input type="checkbox" class='import2_check' name="ID" value="@JItem.CIN" />
                            </td>
                            <td>@JItem.CIN</td>
                            <td>@JItem.Nom</td>
                            <td>@JItem.Prenom</td>
                            <td>@JItem.Grade</td>
                            <td>@JItem.Statut</td>
                            <td>@JItem.IntituleFrDepartement</td>
                            <td>@JItem.SituationAdministrative</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="ids2" value="@ids">