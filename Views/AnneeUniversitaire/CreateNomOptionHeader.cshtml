                        {
                            <option value="@NiveauItem.Code">@NiveauItem.IntituleAbrg</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12 form-row">
            <div class="form-group row">
                <label for="" class="col-md-1 control-label">Parcours</label>
                <div class="col-md-5">
                    <select class="form-control" id=CodeParcours>
                        @foreach (var ParcoursItem in @Model.ListParcours)
                        {
                        <option value="@ParcoursItem.Code">@ParcoursItem.IntituleFr</option>
                        }
                    </select>
                </div>
                <label for="" class="col-md-1 control-label">Periode</label>
                <div class="col-md-5">
                    <select class="form-control" id="CodePeriode">
                        @foreach (var PeriodeItem in @Model.ListTypePeriodes)
                        {
                        <option value="@PeriodeItem.Code">@PeriodeItem.IntituleFr</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
</form>