@model SearchModelView

<form class="form-horizontal search-form1" id="options-form">
    <div class="form-group">
        <div class="col-md-12">
            <div class="form-group row">
                <label for="" class="col-md-1 control-label">Fili√®re</label>
                <div class="col-md-5">
                    <select class="form-control" id="CodeFiliere">
                        @foreach (var FiliereItem in @Model.ListFilieres)
                        {
                        <option value="@FiliereItem.Code">@FiliereItem.IntituleFr</option>
                        }
                    </select>
                </div>
                <label for="" class="col-md-1 control-label">Niveau</label>
                <div class="col-md-5">
                    <select class="form-control" id="CodeNiveau">
