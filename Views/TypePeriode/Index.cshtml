@model List<Projet_PFE.Models.TypePeriode>
@{
ViewData["Title"] = "Périodes";
}
@section Styles{

<link rel="stylesheet" href="~/template/vendor/datatables-plugins/dataTables.bootstrap.css">
<link rel="stylesheet" href="~/template/vendor/datatables-responsive/dataTables.responsive.css">
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header page-header-resize">Liste Des Périodes</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-right">
        <button class="btn b-button btn-sm btn-bottom" onclick="CreateEditTypePeriode('')">
            <i class="fa fa-plus fa-x"></i>
        </button>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="periode-table" class="table table-striped table-bordered table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Intitule Français</th>
                            <th>Intitule Arabe</th>
                            <th>Abréviation</th>
                            <th>Type</th>
                            <th>Duree</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="periode-tbody">
                        @foreach (var PerD in Model)
                        {
                            <tr class="row-color" id="row_@PerD.Code">
                                <td>@PerD.Code</td>
                                <td>@PerD.IntituleFr</td>
                                <td>@PerD.IntituleAr</td>
                                <td>@PerD.IntituleAbrg</td>
                                <td>@PerD.Type</td>
                                <td>@PerD.Duree</td>
                                <td class="text-right">
                                    <a href="#" onclick="CreateEditTypePeriode(@PerD.Code)">
                                        <i class="fa fa-edit fa-2x" style="color: bleue;"></i>
                                    </a>
                                    <a href="#" onclick="ConfirmDelete(@PerD.Code)">
                                        <i class="fa fa-trash-o b-icon fa-2x" ></i>
                                    </a>   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--Create Periode -->
<div class="modal fade" id="create-periode" tabindex="-1" role="dialog" aria-labelledby="periode-create" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title text-primary" id="periode-create">
                    Ajouter Une Période
                </h4>
            </div>
            <div class="modal-body" id="create-edit-periode-body">
              
            </div>
        </div>
    </div>
</div>
<!-- Ends -->

<!--Create Periode -->
<partial name="~/Views/TypePeriode/Delete.cshtml">
<!-- Ends -->
 <partial name="~/Views/Shared/_Information.cshtml">
@section Scripts{
<!-- DataTables JavaScript -->
<script src="~/template/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/template/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="~/template/vendor/datatables-responsive/dataTables.responsive.js"></script>
<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml">
@* custom datatable properties *@
<script src="~/js/periode.js"></script>
}