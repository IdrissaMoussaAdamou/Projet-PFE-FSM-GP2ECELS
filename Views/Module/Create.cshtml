@model PlanEtude

<form id="module-form">
    <input type="hidden" asp-for="@Model.NewModule.IdNiveau" value="@Model.IdNiveau">
    <input type="hidden" asp-for="@Model.NewModule.IdParcours" value="@Model.IdParcours">
    <input type="hidden" asp-for="@Model.NewModule.OldCode" value="@Model.NewModule.Code">
    <input type="hidden" asp-for="@Model.NewModule.IdModule">
    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-12">
                <label for="">
                    Unite Enseignement
                </label>
                <select class="form-control" asp-for="@Model.NewModule.IdUniteEnseignement">
                    @foreach (var UniteItem in @Model.ListUnites)
                    {
                        <option value="@UniteItem.IdUniteEnseignement">@UniteItem.IntituleFr</option>
                    }
                </select>
            </div>

        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-6">
                <label for="">
                    Code
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.Code">
                <span class="text-danger" asp-validation-for="@Model.NewModule.Code"></span>
            </div>

            <div class="col-md-6">
                <label for="">
                    Intitulé Français
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.IntituleFr">
                <span class="text-danger" asp-validation-for="@Model.NewModule.IntituleFr"></span>
            </div>

        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-6">
                <label for="">
                    Intitulé Arabe
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.IntituleAr">
                <span class="text-danger" asp-validation-for="@Model.NewModule.IntituleAr"></span>
            </div>

            <div class="col-md-6">
                <label for="">
                    Abréviation
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.IntituleAbrg">
                <span class="text-danger" asp-validation-for="@Model.NewModule.IntituleAbrg"></span>
            </div>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-4">
                <label for="">
                    Nature
                </label>
                <select class="form-control" asp-for="@Model.NewModule.Nature">
                    <option value="Fondamentale">Fondamentale</option>
                    <option value="Transversale">Transversale</option>
                    <option value="Optionnelle">Optionnelle</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="">
                    Régime D'Examen
                </label>
                <select class="form-control" asp-for="@Model.NewModule.RegimeExamen">
                    <option value="Controle Continu">Contrôle Continu</option>
                    <option value="Regime Mixte"> Regime Mixte</option>Periode
                </select>
            </div>

            <div class="col-md-4">
                <label for="">
                    Période
                <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.Periode">
                <span class="text-danger" asp-validation-for="@Model.NewModule.Periode"></span>
            </div>

        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-3">
                <label for="">
                    Univté Volume Horaire
                <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.UniteVolumeHoraire">
                <span class="text-danger" asp-validation-for="@Model.NewModule.UniteVolumeHoraire"></span>
            </div>

            <div class="col-md-3">
                <label for="">
                    Durée Examen
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.DureeExamen">
                <span class="text-danger" asp-validation-for="@Model.NewModule.DureeExamen"></span>
            </div>

            <div class="col-md-3">
                <label for="">
                    Crédit
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.Credits">
                <span class="text-danger" asp-validation-for="@Model.NewModule.Credits"></span>
            </div>

            <div class="col-md-3">
                <label for="">
                    Coefficient
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.Coefficient">
                <span class="text-danger" asp-validation-for="@Model.NewModule.Coefficient"></span>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-3">
                <label for="">
                    Nombre d'Heure De Cours
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.NbHeuresCours">
                <span class="text-danger" asp-validation-for="@Model.NewModule.NbHeuresCours"></span>
            </div>

            <div class="col-md-3">
                <label for="">
                    Nombre d'Heure De TD
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.NbHeuresTD">
                <span class="text-danger" asp-validation-for="@Model.NewModule.NbHeuresTD"></span>
            </div>

            <div class="col-md-3">
                <label for="">
                    Nombre d'Heure De TP
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.NbHeuresTP">
                <span class="text-danger" asp-validation-for="@Model.NewModule.NbHeuresTP"></span>
            </div>

            <div class="col-md-3">
                <label for="">
                    Nombre d'Heure De CI
                    <span class="required-field">*</span>
                </label>
                <input type="text" class="form-control" asp-for="@Model.NewModule.NbHeuresCI">
                <span class="text-danger" asp-validation-for="@Model.NewModule.NbHeuresCI"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer btn-full-right">
        <button type="reset" class="btn b-button">Annuler</button>
        <button type="button" class="btn b-button" id="submit-module">
            @if(string.IsNullOrEmpty(@Model.NewModule.Code)){ <span> Enregistrer </span> } else{ <span> Modifier </span> }
        </button>
    </div>
</form>