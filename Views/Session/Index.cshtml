@model List<Session>
@{
    ViewData["Title"] = "List Des Sessions";
    ViewData["AppName"] = "FSM - GDS";
}
@section Styles{

    <link rel="stylesheet" href="~/template/vendor/datatables-plugins/dataTables.bootstrap.css">
    <link rel="stylesheet" href="~/template/vendor/datatables-responsive/dataTables.responsive.css">
    <link rel="stylesheet" href="~/css/showFiliere.css">
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header page-header-resize">Liste Des Session</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 text-right">
        <button class="btn b-button btn-sm btn-bottom" onclick="CreateEditSession(0)">
            <i class="fa fa-plus fa-x"></i>
        </button>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="Session-datable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Désignation</th>
                            <th>AnneeUniversitaire</th>
                            <th>Periode</th>
                            <th>Etat</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody id="Session-table-body">
                        @foreach (var @SallerItem in @Model)
                        {
                            <tr class="row-color" id="row_@SallerItem.Id">
                                <td>@SallerItem.Designation</td>
                                <td>@SallerItem.AnneeUniversitaire</td>
                                <td>@SallerItem.Periode</td>
                                <td>@SallerItem.Etat</td>
                                <td class="text-center">
                                    <a asp-controller="Session" asp-action="show2" asp-route-id="@SallerItem.Id">
                                        <i class="fa fa-eye b-icon fa-2x " title="Consulter"></i>
                                    </a>
                                    @*<a href="#" onclick="CreateEditSalle('@SallerItem.Code')">
                                        <i class="fa fa-edit fa-2x" style="color: #337ab7;" title="Modifier"></i>
                                    </a>*@
                                    <a href="#" onclick="ConfirmDelete(@SallerItem.Id)">
                                        <i class="fa fa-trash-o b-icon fa-2x" title="Supprimer"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- create Salle -->
<!-- Modal -->
<div class="modal fade bd-exemple-modal-lg" id="Session-create" tabindex="-1" role="dialog" aria-labelledby="create-Session" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title text-primary" id="create-Session">Ajouter Une Session</h4>
            </div>
            <div class="modal-body" id="create-edit-Session-body">

            </div>
        </div>
    </div>
</div>

<!-- ends -->
<!-- delete Salle -->
<partial name="~/Views/Session/Delete.cshtml">
    <partial name="~/Views/Shared/_Information.cshtml">
        <!--End -->
        @section Scripts{
            <!-- DataTables JavaScript -->
            <script src="~/template/vendor/datatables/js/jquery.dataTables.min.js"></script>
            <script src="~/template/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
            <script src="~/template/vendor/datatables-responsive/dataTables.responsive.js"></script>
            <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml">
                <script src="~/js/Session.js"></script>
        }
