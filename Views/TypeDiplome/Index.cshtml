@model List<Projet_PFE.Models.TypeDiplome>
@{
ViewData["Title"] = "Type De Diplôme";
}
@section Styles{

<link rel="stylesheet" href="~/template/vendor/datatables-plugins/dataTables.bootstrap.css">
<link rel="stylesheet" href="~/template/vendor/datatables-responsive/dataTables.responsive.css">
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header page-header-resize">Liste Des Types De Diplôme</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 text-right">
        <button class="btn b-button btn-sm btn-bottom" onclick="CreateEditTypeDiplome('')">
            <i class="fa fa-plus fa-x"></i>
        </button>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="dataTables-example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Intitulé Français</th>
                            <th>Intitulé Arabe</th>
                            <th>Abréviation</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="diplome-tbody">
                        @foreach (var TypeD in Model)
                        {
                            <tr class="row-color" id="row_@TypeD.Code">
                                <td>@TypeD.Code</td>
                                <td>@TypeD.IntituleFr</td>
                                <td>@TypeD.IntituleAr</td>
                                <td>@TypeD.IntituleAbrg</td>
                                <td class="text-right">
                                    <a href="#" onclick="CreateEditTypeDiplome(@TypeD.Code)">
                                        <i class="fa fa-edit fa-2x" style="color: #337ab7;"></i>
                                    </a>
                                    <a href="#" onclick="ConfirmDelete(@TypeD.Code)">
                                        <i class="fa fa-trash-o b-icon fa-2x" ></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- create TypeDiplome -->
<div class="modal fade" id="typediplome-create" tabindex="-1" role="dialog" aria-labelledby="create-typediplome"
    aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title text-primary" id="create-typediplome">
                    Ajouter Un Type de Diplôme
                </h4>
            </div>
            <div class="modal-body" id="create-edit-typediplome-body">

            </div>
        </div>
    </div>
</div>
<!-- Ends-->
 <partial name="~/Views/Shared/_Information.cshtml">
<!-- Delete TypeDiplome -->
<partial name="~/Views/TypeDiplome/Delete.cshtml">
<!-- Ends-->
@section Scripts{
<!-- DataTables JavaScript -->
<script src="~/template/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/template/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="~/template/vendor/datatables-responsive/dataTables.responsive.js"></script>
 <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml">
@* custom datatable properties *@
<script src="~/js/typediplome.js"></script>
}