@model List<UneSection>
@{ var ids = ViewBag.ids; }

@section Styles{
    <link rel="stylesheet" href="~/template/vendor/datatables-plugins/dataTables.bootstrap.css">
    <link rel="stylesheet" href="~/template/vendor/datatables-responsive/dataTables.responsive.css">
    <link rel="stylesheet" href="~/css/chargeEnseignement.css">
    <link rel="stylesheet" href="~/css/showFiliere.css">
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header page-header-resize">Liste Des Sections</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 filter-bar">
        <form class="form-horizontal filter-bar-form">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group row" style="margin-bottom: 0px;">
                        <label for="" class="col-md-1 col-lg-offset-2" style="padding-top: 8px;">Filtrer Par:</label>
                        <div class="col-md-2">
                            <select class="form-control" id="FieldNameSalle">
                                <option value="Batiment">Batiment</option>
                                <option value="type">type</option>
                                <option value="Etat">Etat</option>
                                <option value="Tous">Tous</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <select class="form-control" id="FieldValueSalle">
                                @*@foreach (var battItem in ListBatiment)
                                {
                                    <option value="@battItem.Code">@battItem.Nom</option>*@
}
                            </select>
                        </div>

                        <div class="col-md-2">
                            <button type="button" class="btn b-button btn-sm " id="searchS">
                                Chercher | <i class="fa fa-search fa-x"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-right">
        <button class="btn b-button btn-sm btn-bottom" onclick="ImporterSection(@ids)">
            <i class="fa fa-upload fa-x" title="Importer"></i>
            Importer
        </button>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="Salle2-datable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr style="background-color: rgb(221, 221, 221);">
                            <th>Select</th>
                            <th>IntituleFiliere</th>
                            <th>IntituleParcours</th>
                            <th>Niveau</th>
                            <th>CodeAnneeUniv</th>
                            <th>NbEtudiants</th>
                        </tr>
                    </thead>
                    <tbody id="Salle2-table-body">
                        @foreach (var @SallerItem in @Model)
                        {
                            <tr class="row-color" id="row_@SallerItem.Id">
                                <td class="checkz">
                                    <input type="checkbox" class='import3_check' name="ID" value="@SallerItem.Id" />
                                </td>
                                <td>@SallerItem.IntituleFiliere</td>
                                <td>@SallerItem.IntituleParcours</td>
                                <td>@SallerItem.Niveau</td>
                                <td>@SallerItem.CodeAnneeUniv</td>
                                <td>@SallerItem.NbEtudiants</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/template/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/template/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="~/template/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml">
        <script src="~/js/showSession.js"></script>
}
