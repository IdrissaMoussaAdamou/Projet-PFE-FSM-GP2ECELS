@model  RegisterTeacherModel
@{
    Layout = "_Login";
    ViewData["Title"] = "Nouveau Compte Enseignant";
}
<div class="row">
    <div class="col-md-5 col-md-offset-3">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center g-text"> Nouveau Compte Enseignant</h3>
            </div>
            <div class="panel-body">
                <form asp-controller="Auth" asp-action="RegisterTeacher" role="form" method="POST">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <input type="hidden" name="OldEmail" value="@Model.Email">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="CIN" asp-for="CIN"  autofocus>
                        <span class="text-danger" asp-validation-for="CIN"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Email" placeholder="E-mail" >
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="Password" asp-for="Password" class="form-control" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="Password" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <button type="submit" class="btn btn-sm b-button btn-block">Cr√©er</button>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml">
}