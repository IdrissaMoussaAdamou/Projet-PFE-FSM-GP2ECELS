@model ChargeEncadrement
@{
    var ListTypeEncadrement = ViewBag.ListTypeEncadrement;
}

@if(@Model != null)
{
    <form id="charge-encadrement-form">
        <input type="hidden" asp-for="IdAUEnseignant">
        <input type="hidden" name="codeAnnee" id="codeAnnee">
        <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label for="">
                Nombre D'Encadrement
            </label>
            <select class="form-control" asp-for="IdTypeEncadrement">
                @foreach (var TypeEnItem in @ListTypeEncadrement)
                {
                    <option value="@TypeEnItem.Id">@TypeEnItem.Libelle @TypeEnItem.Cycle</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="IdTypeEncadrement"></span>
        </div>
        <div class="form-group">
            <label for="">
                Nombre D'Encadrement
                <span class="required-field">*</span>
            </label>
            <input type="text" class="form-control" asp-for="NbEncadrements">
            <span class="text-danger" asp-validation-for="NbEncadrements"></span>
        </div>

        <div class="modal-footer btn-full-right">
            <button type="reset" class="btn b-button">Annuler</button>
            <button type ="button" class="btn b-button" id="submit-charge-encadrement">
                @if(@Model.Id > 0){ <span> Modifier </span> } else{ <span> Enregistrer </span> }
            </button> 
        </div>
    </form>
}